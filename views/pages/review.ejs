<!doctype html>
<html>
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/unsemantic/1.2.3/unsemantic-grid-responsive-tablet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link rel="stylesheet" type="text/css" href="css/review.css">
    <link href="https://fonts.googleapis.com/css?family=Archivo+Narrow|Poiret+One" rel="stylesheet">
  </head>
  <body>


<!-- HEADER STARTS -->

    <header class="custom-grid-container">
      <% include ../partials/header %>
    </header>


<!-- MAIN STARTS -->

    <main id="Page" class="grid-container">
      <div id="optionsBar">
        <button class="loginButton" onclick="login_menu()">Profile</button>
        <div class="profileMenu">
           <a href="loginPage">
           <button>Login</button></a>
           <a href="registerPage">
           <button>Register</button> </a>
        </div>
      </div>


<!-- TEXTBOX -->

      <form action="/reviewdish" method="POST">
          <div class="container">
            <label for="reviewbox"><b>Your Review</b></label>
            <input type="text" placeholder="What did you think of tis dish?" name="reviewbox" required>
          </div>



  <!-- STAR RATINGS -->

        <div>
          <b>Taste</b>
          <p>
            <img src="images/star-empty-single.png" id="star11" class="star">
            <img src="images/star-empty-single.png" id="star12" class="star">
            <img src="images/star-empty-single.png" id="star13" class="star">
            <img src="images/star-empty-single.png" id="star14" class="star">
            <img src="images/star-empty-single.png" id="star15" class="star">
          </p>
        </div>
        <div>
          <b>Cost</b>
          <p>
            <img src="images/star-empty-single.png" id="star21" class="star">
            <img src="images/star-empty-single.png" id="star22" class="star">
            <img src="images/star-empty-single.png" id="star23" class="star">
            <img src="images/star-empty-single.png" id="star24" class="star">
            <img src="images/star-empty-single.png" id="star25" class="star">
          </p>
        </div>
        <div>
          <b>Ease of Preparation</b>
          <p>
            <img src="images/star-empty-single.png" id="star31" class="star">
            <img src="images/star-empty-single.png" id="star32" class="star">
            <img src="images/star-empty-single.png" id="star33" class="star">
            <img src="images/star-empty-single.png" id="star34" class="star">
            <img src="images/star-empty-single.png" id="star35" class="star">
          </p>
        </div>
        <div>
          <p>
            <button id="submitButton">Submit</button>
          </p>
        </div>
      </form>
    </main>


<!-- FOOTER STARTS -->

    <footer id="PageFooter" class="custom-grid-container">
      <% include ../partials/footer %>
    </footer>


<!--JS-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="js/starrating.js"></script>
    <script src="js/scripting.js"></script>
  </body>
</html>
